---
import experiences from "../collections/experiences.json";
import AboutExperience from "../components/about-experience.astro";
import PageHeading from "../components/page-heading.astro";
import Layout from "../layouts/main.astro";

const socials = [
  { url: "https://github.com/dallinhuff", text: "Github" },
  { url: "https://linkedin.com/in/dallinhuff", text: "LinkedIn" },
  { url: "https://threads.net/dallin.huff", text: "Threads" },
  { url: "mailto:dallinhuff@gmail.com", text: "send me an email"}
];
---

<Layout title="About Me">
  <section class="relative z-20 max-w-2xl mx-auto my-12 px-7 lg:px-0 flex flex-col gap-y-4">
    <PageHeading
      title="About Me"
      description="Hello ðŸ‘‹ I'm a full-stack software engineer from Utah. I'm passionate about leveraging new technologies to solve real problems."
    />
    
    <h2 class="text-2xl font-bold dark:text-neutral-200">Education & Certifications</h2>
    <ul
      class="text-sm leading-6 text-gray-600 dark:text-neutral-400 sm:leading-7 lg:leading-8 sm:text-base lg:text-lg list-disc list-inside"
    >
      <li>Brigham Young University â€” B.S., Computer Science</li>
      <li>Advanced Scala 3 & Functional Programming â€” Rock the JVM</li>
    </ul>
    
    <h2 class="text-2xl font-bold lg:mt-10 sm:mt-6 dark:text-neutral-200">
      Experience
    </h2>
    <div class="px-5">
      {
        experiences.map((experience, loop) =>
          <>
            {loop == 0 || loop == 1 ?
              <div class="pb-10 border-l border-gray-200 dark:border-neutral-700">
                <AboutExperience
                  dates={experience.dates}
                  role={experience.role}
                  company={experience.company}
                  logo={experience.logo}
                  keyTasks={experience.keyTasks}
                />
              </div>
            : <AboutExperience
                dates={experience.dates}
                role={experience.role}
                company={experience.company}
                logo={experience.logo}
                keyTasks={experience.keyTasks}
              />
            }
          </>
        )
      }
    </div>

    <h2 class="mb-2 text-2xl font-bold lg:mt-10 sm:mt-6 dark:text-neutral-200">Let's Connect</h2>
    <p
      class="text-sm leading-6 text-gray-600 dark:text-neutral-400 sm:leading-7 lg:leading-8 sm:text-base lg:text-lg"
    >
      If you want to stay up to date with my work, be sure to follow me on
      {
        socials.map(({url, text}, index) =>
          <>
            {index < socials.length - 1 ? '' : 'or you can '}<a
              href={url}
              target="_blank"
              class="text-indigo-600 underline"
            >{text}</a>{index < socials.length - 1 ? ', ' : ''}
          </>
        )
      }.
    </p>
  </section>
</Layout>
