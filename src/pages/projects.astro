---
import projects from "../collections/projects.json";
import Project from "../components/project.astro";
import StaticPage from "../layouts/static-page.astro";
---

<StaticPage
  title="My Projects"
  description="Here are some of the current projects I've been working on. I'm always working on something new, so check back often."
>
  <div class="z-50 grid items-stretch w-full grid-cols-1 gap-7 sm:gap-5 sm:grid-cols-2">
    {
      projects.map((project) =>
        <Project
          name={project.name}
          description={project.description}
          image={project.image}
          url={project.url}
        />
      )
    }
  </div>
</StaticPage>
